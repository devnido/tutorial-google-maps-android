<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cl.nidosoft.googlemaps">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FirstMapActivity"
            android:label="@string/title_activity_firt_map" />
        <activity
            android:name=".MarkersActivity"
            android:label="@string/title_activity_marcadores" />
        <activity
            android:name=".MarkerDetailActivity"
            android:label="@string/title_activity_marker_detail" />
        <activity
            android:name=".MapTypesActivity"
            android:label="@string/title_activity_map_types" />
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera" />
        <activity
            android:name=".PolylineActivity"
            android:label="@string/title_activity_polyline" />
        <activity
            android:name=".PolygonActivity"
            android:label="@string/title_activity_polygon" />
        <activity
            android:name=".CircleActivity"
            android:label="@string/title_activity_circle" />
        <activity
            android:name=".GesturesActivity"
            android:label="@string/title_activity_gestures" />
        <activity
            android:name=".EventsActivity"
            android:label="@string/title_activity_events" />
        <activity
            android:name=".ControlsActivity"
            android:label="@string/title_activity_controls" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />


    </application>

</manifest>
